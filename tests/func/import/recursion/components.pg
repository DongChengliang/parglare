import 'base.pg';
import 'modules.pg';   // Recursive import of 'modules'

Component:
  'component' name=ID extends=ComponentExtends? '{'
      slots=Slot*
      modules=Module*   // recursive reference to Module
  '}'
;

ComponentExtends: 'extends' extends=FQN+[COMMA];

Slot: SlotIn|SlotOut;

SlotIn: 'in' name=ID;
SlotOut: 'out' name=ID;
